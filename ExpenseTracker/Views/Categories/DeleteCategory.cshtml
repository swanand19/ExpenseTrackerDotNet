@model CategoryResponse

@{
    ViewBag.Title = "Delete Category";
}


<!-- breadcrumb starts -->
<div class="flex">
    <div class="flex-1">
        <div class="text-grey">
            <span>Categories</span>
            <i class="fa-solid fa-caret-right"></i>
            <span class="text-grey">Category</span>
            <i class="fa-solid fa-caret-right"></i>
            <span class="text-grey">Delete</span>
        </div>
    </div>
</div>
<!-- breadcrumb ends -->



<div class="form-container">

    <a asp-controller="Categories" asp-action="CategoriesIndex" class="link-hover">Back to Categories List</a>
    <h2 class="text-large">Delete Category</h2>
    <h3>Are you sure to delete this person?</h3>

    <form asp-controller="Categories" asp-action="DeleteCategory" method="post">

        <input type="hidden" asp-for="CategoryID" />

        @*CategoryName*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="CategoryName" class="form-label pt">Category Name</label>
            </div>
            <div class="flex-1">
                <input asp-for="CategoryName" class="form-input" disabled="disabled" />
                <span asp-validation-for="CategoryName" class="text-red"></span>
            </div>
        </div>


        @*Submit*@
        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <button class="button button-red-back">Delete</button>
                <div asp-validation-summary="All" class="text-red"></div>
                @if (ViewBag.Errors != null)
                {
                    <div class="text-red ml">
                        <ul>
                            @foreach (string error in ViewBag.Errors)

                            {
                                <li class="ml">@error</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>

    </form>
</div>
